#for
	padding 30px 0 105px
	background-color: #1E2436
	background-image linear-gradient(to bottom, #1E2436 0%, #1F2536 100%)
	background-image url('../img/backs/for-img.png')
	background-repeat no-repeat
	background-position: left 20px top 30px
	background-size: 600px
	margin-top: 60px
	position relative
	z-index 9	
	&:before
		content ''
		position: absolute
		width 100%
		height 130px
		left 0
		right 0
		top -130px
		z-index 11
		background-image url('../img/backs/for-top-bg.png')
		background-repeat no-repeat
		background-position: center top
		background-size: 100% 100%
	&:after
		content ''
		position: absolute
		width 100%
		height 58px
		left 0
		right 0
		bottom: -57px
		z-index 11
		background-image url('../img/backs/for-bottom-bg.png')
		background-repeat no-repeat
		background-position: center top
		background-size: 100% 100%

.for-list
	li
		margin-bottom: 50px
		padding-left: 70px
		list-style none
		color #fff
		position relative
		&:before
			content: ''
			position: absolute
			left 0
			top 0
			width 54px
			height 54px
			background-image url('../img/backs/for-list-decor.png')
			background-repeat no-repeat
			background-position: center
		&:after
			content: '1'
			position: absolute
			left 0
			top 0
			width 54px
			height 54px
			border-radius: 50px
			border: 2px solid #fedc18
			font-size: 30px
			font-family: OS
			line-height: 50px
			color #f3d31a
			text-align: center
		&:nth-child(2):after
			content: '2'
		&:nth-child(3):after
			content: '3'
	&-2
		li
			&:nth-child(1):after
				content: '4'
			&:nth-child(2):after
				content: '5'
			&:nth-child(3):after
				content: '6'