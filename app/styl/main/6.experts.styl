#experts
	padding 78px 0 88px
	position relative
	z-index 12
	background-color: #232939
	background-image url(../img/backs/ornament.png)
	background-repeat no-repeat
	background-position: center
	background-size: contain
	&:before
		content ''
		display block
		position: absolute
		width 100%
		height 86px
		top -86px
		left 0
		right 0
		background-image url(../img/backs/experts-top-bg.png)
		background-repeat no-repeat
		background-position: bottom center
		background-size: 100% 100%
	&:after
		content ''
		display block
		position: absolute
		width 100%
		height 94px
		bottom -94px
		left 0
		right 0
		background-image url(../img/backs/experts-bottom-bg.png)
		background-repeat no-repeat
		background-position: top center
		background-size: 100% 100%
.general-title-experts
	padding 0 200px
	&:before
		right calc(100% - 200px)
	&:after
		left calc(100% - 200px)